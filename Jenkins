pipeline {
    agent any

    environment {
        // Define environment variables if needed
        NODEJS_VERSION = '14.17.0'
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the source code from your version control system (e.g., Git)
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Use Node.js to build the application
                withNodeJS(nodeJSInstallationName: 'NodeJS') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Test') {
            steps {
                // Run tests if applicable
                withNodeJS(nodeJSInstallationName: 'NodeJS') {
                    sh 'npm test'
                }
            }
        }

        stage('Publish') {
            steps {
                // Publish the application or artifacts
                archiveArtifacts(artifacts: 'dist/**', fingerprint: true)
            }
        }

        stage('Deploy') {
            steps {
                // Add deployment steps if needed
                echo 'Deploying...'
            }
        }
    }

    post {
        success {
            // Actions to be performed when the pipeline succeeds
            echo 'Pipeline succeeded!'

            // Example: Send a notification
            // slackSend(channel: '#general', color: 'good', message: 'Pipeline succeeded!')
        }
        failure {
            // Actions to be performed when the pipeline fails
            echo 'Pipeline failed!'

            // Example: Send a notification
            // slackSend(channel: '#general', color: 'danger', message: 'Pipeline failed!')
        }
    }
}
